[push]
	default = simple
[color]
  ui = auto
[merge]
	ff = only
	tool = nvimdiff
[mergetool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[status]
	showUntrackedFiles = all
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[alias]
  s = status -s
  last = log -1
  lol = log --oneline
[credential]
	helper = osxkeychain
[diff]
	tool = nvimdiff
	submodule = log
	compactionHeuristic = true
[difftool]
	prompt = true
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[url "git@github.com:"]
	insteadOf = https://github.com/
[pull]
	rebase = true
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy
