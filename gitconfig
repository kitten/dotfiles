[push]
  default = simple
[color]
  ui = auto
[merge]
  ff = only
  tool = vimdiff
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[status]
  showUntrackedFiles = all
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[alias]
  s = status -s
  last = log -1
  lol = log --oneline
[credential]
  helper = osxkeychain
[diff]
  tool = vimdiff
  submodule = log
  compactionHeuristic = true
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[url "git@github.com:"]
  insteadOf = https://github.com/
[pull]
  rebase = true
[core]
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = ~/.gitignore
[interactive]
  diffFilter = diff-so-fancy
