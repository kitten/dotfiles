[push]
  default = simple
[color]
  ui = auto
[commit]
  template = ~/.gitmessage
	gpgSign = true
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[status]
  showUntrackedFiles = all
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[alias]
  s = status -s
  last = log -1
  lol = log --oneline
[pull]
  rebase = true
[core]
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludesfile = ~/.gitignore
	filemode = false
[interactive]
  diffFilter = diff-so-fancy
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[mergetool]
  prompt = true
[merge]
  ff = only
  tool = vimdiff
[diff]
  tool = vimdiff
  submodule = log
  compactionHeuristic = true
