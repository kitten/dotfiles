set encoding=utf8
set list

" Invisibles
set listchars=tab:▸\ ,eol:¬

" Enable true color support
let $NVIM_TUI_ENABLE_TRUE_COLOR=1
set termguicolors

" Enable cursor shape switching
let $NVIM_TUI_ENABLE_CURSOR_SHAPE=1

" Syntax highlighting
set nowrap
set textwidth=0
syntax enable
set background=dark
colorscheme dracula

let g:airline_theme="solarized"

